{
    "outputDirectory": "frontend",
    "buildCommand": "echo 'static site â€” no build needed'",
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}