# ==============================
# Mafia Game - Environment Variables
# Copy this file to .env and fill in your values
# ==============================

# Server
NODE_ENV=development
PORT=3001

# Frontend URL (used for CORS)
FRONTEND_URL=http://localhost:8080

# Room settings
ROOM_EXPIRY_MINUTES=30
GRACE_PERIOD_SECONDS=10

# Game settings
MIN_PLAYERS=6
MAX_PLAYERS=20
NIGHT_DURATION_SECONDS=30
DAY_DURATION_SECONDS=60
ROLE_REVEAL_DELAY_SECONDS=3

# Logging
LOG_LEVEL=debug

# MongoDB (Phase 2 - leave blank for in-memory mode)
# MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/mafia
